<div class="row">
  <div class="col-md-4" style="padding-top: 20px;">
	<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post }, html: {class: "well"}) do |f| %>
	  <%= devise_error_messages! %>
      <fieldset>
          <legend>Forgot your password?</legend>
	  <%= f.input :email%>

	  <div style="padding-top:20px;"><%= f.button :submit, "Submit" %></div>
	  </fieldset>
	<% end %>

	<%= render "devise/shared/links" %>
   </div>
</div>
 